{
  "name": "Summanote Extension",
  "description": "AI-powered text summarization extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "offscreen"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.elevenlabs.io/*",
    "<all_urls>"
  ]
}