{
  "name": "Summanote Extension",
  "description": "AI-powered text summarization extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "extension/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["extension/content/content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "extension/background/background.js"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ]
}

{
  "name": "SummaNote",
  "description": "Base extension for our hackathon project",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.elevenlabs.io/*"
  ]
  "content_scripts": [
    
  ]
}


  
