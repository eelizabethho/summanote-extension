{
  "name": "Summanote Extension",
  "description": "Extension to highlight and summarize text",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
